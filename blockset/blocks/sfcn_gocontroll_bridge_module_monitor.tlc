%implements  sfcn_gocontroll_bridge_module_monitor "C"

%% add required include files
%<LibAddToCommonIncludes("GocontrollBridgeModule.h")>

%% Function: Start ==========================================================
%%
%% Purpose:
%%      Code generation for initialization
%%
%function Start(block, system) Output
	%assign slot = "::slot%<block.ParamSettings.moduleSlot>"
	%assign slotmon = "::slot%<block.ParamSettings.moduleSlot>mon"
	%if EXISTS(%<slot>) == 0
		%<LibBlockReportError(block, "No corresponding bridge module block found in the same slot")>
	%else
		%assign module = %<slot>
		%assign type = "bridge module"
		%if ISEQUAL(module, type)
			%if EXISTS(%<slotmon>) == 0
				%assign %<slotmon> = type
			%else
				%assign warning = "Module slot %<block.ParamSettings.moduleSlot> is already being monitored, if that is your intention you can ignore this warning"
				%<LibBlockReportWarning(block, warning)>
			%endif
		%else
			%assign error = "The corresponding slot is configured as a %<module>, not a bridge module"
			%<LibBlockReportError(block, error)>
		%endif
	%endif
%endfunction

%% Function: Output ==========================================================
%%
%% Purpose:
%%      Code generation for signal output
%%
%function Outputs(block, system) Output
	%<LibBlockOutputSignal(0, "", "", 0)> = bridgeModule%<block.ParamSettings.moduleSlot>.temperature;
	%<LibBlockOutputSignal(1, "", "", 0)> = bridgeModule%<block.ParamSettings.moduleSlot>.ground;
	%<LibBlockOutputSignal(2, "", "", 0)> = bridgeModule%<block.ParamSettings.moduleSlot>.current[0];
	%<LibBlockOutputSignal(3, "", "", 0)> = bridgeModule%<block.ParamSettings.moduleSlot>.current[1];
%endfunction

